{
  "name": "@mmpg-soft/v-bump",
  "description": "A simple utility that bumps the version of your package according to the last commit message.",
  "version": "1.0.0",
  "author": "M. Gross <mg@mmpg.xyz> (https://mmpg.xyz)",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "patch:publish": "v-bump -s patch -i 1 && npm publish --access public",
    "minor:publish": "v-bump -s minor -i 1 && npm publish --access public",
    "major:publish": "v-bump -s major -i 1 && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MMPG-Consulting/v-bump.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MMPG-Consulting/v-bump/issues"
  },
  "homepage": "https://github.com/MMPG-Consulting/v-bump#readme",
  "bin": {
    "v-bump": "bin/index.sh"
  }
}
